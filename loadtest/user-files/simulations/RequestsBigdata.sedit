        val normalGetFunctionalStatus_2 = scenario("GetFunctionalStatus_2").feed(feeder2).exec(GetFunctionalStatus_2)



  // Simulate NPÃ– that requests patient data once per second
  // NOTE: Injections are run in parallell, stepts within an injection are sequencial
  setUp(
    requestGetDiagnosis_2.inject(atOnceUsers(1)),
    requestGetMedicationHistory_2.inject(atOnceUsers(1)),
    requestGetImagingOutcome_1.inject(atOnceUsers(1)),
    requestGetLaboratoryOrderOutcome_3.inject(atOnceUsers(1)),
    requestGetReferralOutcome_3.inject(atOnceUsers(1)),
    requestGetAlertInformation_2.inject(atOnceUsers(1)),
    requestGetCareDocumentation_2.inject(atOnceUsers(1)),
    requestGetVaccinationHistory_2.inject(atOnceUsers(1)),
    requestGetFunctionalStatus_2.inject(atOnceUsers(1)),
    normalGetDiagnosis_2.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetMedicationHistory_2.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetImagingOutcome_1.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetLaboratoryOrderOutcome_3.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetReferralOutcome_3.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetAlertInformation_2.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetCareDocumentation_2.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetVaccinationHistory_2.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)),
    normalGetFunctionalStatus_2.inject(nothingFor(60 seconds), constantUsersPerSec(1) during (120 seconds)))
    .protocols(httpConf)  
    .assertions(
      details("GetDiagnosis_2").successfulRequests.percent.gt(80),
      details("GetMedicationHistory_2").successfulRequests.percent.gt(80),
      details("GetImagingOutcome_1").successfulRequests.percent.gt(80), 
